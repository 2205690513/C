// Online C compiler to run C program online
#include <stdio.h>
main ( )
{
    int a;
    printf(" enter a number= ");
    scanf(" %d" , &a);
    if(a!=0)
    {
        if(a>0)
    {
        printf(" number is greater");
    }    
    else
    {
        printf(" number is smaller");
    }
    }
    else
    {
        printf(" number is equal");
    }
}
